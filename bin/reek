#!/usr/bin/env ruby
#
#  Created on 2008-2-17.
#  Copyright (c) 2008-2009 Kevin Rutherford, Rutherford Software Ltd. All rights reserved.
#

require 'reek'
require 'reek/options'
require 'reek/source'

sources = Reek::Options.parse(ARGV)
exitstatus = 0
sources.each do |src|
  warnings = Reek::Analyser.new(src).analyse
  next if warnings.empty?
  if sources.size == 1
    puts warnings.to_s
  else
    puts "\"#{src.filename}\" -- #{warnings.length} warnings:"
    puts warnings.to_s
    puts
  end
  exitstatus = 2
end

exit(exitstatus)
